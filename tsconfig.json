{
  "compilerOptions": {
    "sourceMap": false,
    "target": "es5",
    "outDir": "./dist",
    "baseUrl": "./src",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": [
      "es2018",
      "es2017",
      "es2015",
      "dom",
      "es6"
    ],
    "module": "commonjs"
  },
  "include": [
    "api/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
